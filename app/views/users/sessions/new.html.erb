<main>
    <div class="py-5 container">
        <div class="col-9 col-xl-6 mx-auto">
            <p class="hero-text-font color-theme text-center">Fotobook Login</p>

            
            <div class="authen-form shadow px-3">
                <%= form_for resource, as: resource_name, url: session_path(resource_name), class: "authen-form shadow px-3" do |f| %>
                    <!-- Avatar -->
                    <div class="d-flex justify-content-center p-3">
                        <img class="rounded-circle" src="/image/01.png" alt="01.png">    
                    </div>     
                    
                    <!-- Email -->
                    <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true, autofocus: true %>

                    <!-- Password -->
                    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>

                    <!-- Login button -->
                    <div class="d-flex justify-content-center mt-3">
                        <%= f.submit "Login", class: "btn btn-primary btn-block bg-theme" %>
                    </div>

                    <!-- Anomious user button -->
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-primary btn-block bg-theme" href="/passthrough/index">Guest</a>
                    </div>

                    <!-- Redirect for forgoting password user -->
                    <div class="d-flex justify-content-center py-2">
                        <a href="#">Forgot password?</a>
                    </div>
                
                <% end %>
            </div>


            <div class="d-flex justify-content-center py-2">
                <%= link_to "Create an account", new_registration_path(resource_name) %>
            </div>


        </div>
    </div>
</main>






