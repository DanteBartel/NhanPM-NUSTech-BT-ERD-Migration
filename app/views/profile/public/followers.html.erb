<%= render partial: "partials/blocks/navi_bar" %>

        

<div class="main-background container-fluid">
    <div class="row pb-3">

        <!-- Side bar -->
        <div class="sideBar col-xl-2 mt-xl-3 d-xl-block position-fixed collapse bg-theme01" id="collapSideBar">
            <div class="d-flex flex-column align-items-center">
                <div class="py-2">
                    <%= render partial: "partials/blocks/side_bar", locals: {tab: "profile"} %>
                </div>                        
            </div>
        </div>


        <!-- Inside the feed -->
        <div class="col-xl-8 pb-3 mx-auto mt-3 bg-light row row-cols-1 justify-content-center">

            <!-- Personal info -->
            <div class="container-fluid">
                <div class="row pt-2">
                    <div class="col-auto">
                        <% if @user.avatar.representable? %>
                            <%= image_tag @user.avatar, class: "myPhotoItemImg" %>
                        <% end %>
                    </div>
                    <div class="col-auto">
                        <div>
                            <%= render partial: "partials/buttons/follow", locals: {followers: @followers, user_id: @user.id} %>
                        </div>
                        <div>
                            <p class="fs-2 fw-bold">
                                <%= @user.fname.to_s + " " + @user.lname.to_s %>
                            </p>
                        </div>
                        <div>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/photos" %>>
                                <%= @user.photos_count.to_s + " Photos" %>
                            </a>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/albums" %>>
                                <%= @user.albums_count.to_s + " Albums" %>
                            </a>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/followees" %>>
                                <%= @user.followees_count.to_s + " Followings" %>
                            </a>
                            <a type="button" class="btn btn-success border" href=<%= "/profile/" + @user.id.to_s + "/followers" %>>
                                <%= @user.followers_count.to_s + " Followers" %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Horrizone line -->
            <div></div>
            <br>
            <hr>

            <!-- List of followings -->
            <div class="container-fluid">
                <div class="row g-3">
                    <% @follows_as_followee.each do |fol| %>
                        <% foer = fol.follower %>
                        <div class="col-auto">
                            <div class="bg-theme01">
                                <div>
                                    <% if foer.avatar.representable? %>
                                        <%= image_tag foer.avatar, class: "myPhotoItemImg" %>
                                    <% end %>
                                </div>

                                <div>
                                    <p>
                                        <%= foer.fname.to_s + " " + foer.lname.to_s %>
                                    </p>
                                </div>

                                <div>
                                    <a href="#">
                                        <%= (foer.photos_count.nil? ? 0 : foer.photos_count).to_s + " Photos" %>
                                    </a>
                                    <a href="#">
                                        <%= (foer.albums_count.nil? ? 0 : foer.albums_count).to_s + " Albums" %>
                                    </a>
                                </div>

                                <div>
                                    <%= render partial: "partials/buttons/follow", locals: {followers: foer.followers, user_id: foer.id} %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            
            <!-- Pagination -->
            

            <div>
                <%= paginate @follows_as_followee %>
            </div>

            


        </div>
    </div>
</div>


