<div class="main-background container-fluid">
    <div class="row pb-2">

        <!-- Side bar -->
        <div class="sideBar col-xl-2 mt-xl-3 d-xl-block position-fixed collapse bg-theme01" id="collapSideBar">
            <div class="d-flex flex-column align-items-center">
                <div class="py-2">
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="feed.html">Feeds</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="myPhoto.html">My photos</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="myAlbum.html">My albums</a>                            
                </div>                        
            </div>                    
        </div>


        <!-- Inside the feed -->
        <div class="col-xl-8 pb-2 mx-auto mt-3 bg-light row row-cols-1 justify-content-center">
            <!-- Statement -->
            <div class="py-2 d-flex justify-content-start">
                <strong>New Photo</strong>
            </div>
            <!-- Horrizone line -->
            <hr/>
            <!-- List of inputs -->
            <div class="container-fluid">
                <form class="row g-3">
                    <div class="col-12 col-xl-6">
                        <div>Title</div>
                        <input type="text" class="form-control" placeholder="Photo Title" required autofocus>
                        <div>Sharing mode</div>                                
                        <select class="form-select">
                            <option>Public</option>
                            <option>Private</option>
                        </select>
                    </div>
                    <div class="col-12 col-xl-6">
                        <div>Description</div>
                        <textarea type="text" class="form-control" rows="4" placeholder="Photo Description" required></textarea>
                    </div>
                    <div class="col-12">
                        <div class="newPhotoReviewZone d-flex justify-content-center align-items-center bg-theme01">
                            <img class="newPhotoReviewIcon" src="/icon/plus-mini-grey.svg" alt="...">
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary btn-block bg-theme" type="submit">Save</button>
                    </div>                            
                </form>
            </div>
            <!-- Horrizone line -->
            <hr/>
            <!-- Temporary form for developing -->
            <%= form_with url: "/users/" + @user.id.to_s + "/photos", method: :post do |f| %>
                <div>
                    <%= label_tag "title" %>
                    <%= text_field_tag "title", nil %>
                </div>
                <div>
                    <%= label_tag "description" %>
                    <%= text_field_tag "description", nil %>
                </div>
                <div>
                    <%= label_tag "is_public" %>
                    <%= select_tag "is_public", options_for_select([ "Public", "Private" ]), prompt: 'Choose one...' %>
                </div>
                <div>
                    <%= label_tag "photo" %>
                    <%= text_field_tag "photo", nil %>
                </div>               
                <hr> 
                <div data-controller="photo-preview">
                    <%= f.label :image %>
                    <div class="d-none" data-photo-preview-target="previewSection">
                        <img alt="..." data-photo-preview-target="imagePreview"/>
                        <button data-photo-preview-target="clearUpload" data-action="photo-preview#clearUpload">
                    </div>
                    <%= f.file_field :image, data: {photo_preview_target: "imageUploader", action: "photo-preview#updatePreview"} %>
                </div>
                <hr>
                <%= submit_tag "Save" %>
            <% end %>

            

        </div>
    </div>
</div>