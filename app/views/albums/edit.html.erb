<div class="main-background container-fluid">
    <div class="row pb-2">

        <!-- Side bar -->
        <div class="sideBar col-xl-2 mt-xl-3 d-xl-block position-fixed collapse bg-theme01" id="collapSideBar">
            <div class="d-flex flex-column align-items-center">
                <div class="py-2">
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="feed.html">Feeds</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="my_photo.html">My photos</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="myAlbum.html">My albums</a>                            
                </div>                        
            </div>                    
        </div>


        <!-- Inside the feed -->
        <div class="col-xl-8 pb-2 mx-auto mt-3 bg-light row row-cols-1 justify-content-center">
            <!-- Statement and button -->
            <div class="py-2 d-flex justify-content-start">
                <div class="d-flex align-items-center">
                    <strong>Edit Album</strong>
                </div>                        
                <a type="button" class="btn btn-primary ms-auto border bg-theme" href="my_photo.html">Back</a>
            </div>
            <!-- Horrizone line -->
            <hr/>
            <!-- List of inputs -->
            <div class="container-fluid">
                
                
                <%= form_with(url: "/albums/" + @album.id.to_s, method: :put, class: "row g-3") do |f| %>

                    <!-- Basic info -->
                    <div class="col-12 col-xl-6">
                        <div>Title</div>
                        <%= text_field_tag "title", @album.title, class: "form-control", placeholder: "Album Title", required: true, autofocus: true %>
                        <div>Sharing mode</div>
                        <%= select_tag "is_public", options_for_select([["Public", true], ["Private", false]], @album.is_public), class: "form-select" %>
                    </div>


                    <div class="col-12 col-xl-6">
                        <div>Description</div>
                        <%= text_area_tag "description", @album.description, class: "form-control", rows: "4", placeholder: "Album Description", required: true %>
                    </div>


                    <!-- Photo -->
                    <div class="col-12">

                        

                        <div class="newPhotoReviewZone d-flex justify-content-center align-items-center bg-theme01" data-controller="edit-photo-preview" onclick="document.getElementById('selectedFile').click();">
                            
                            <div class="d-none" data-edit-photo-preview-target="previewSection">
                                <img class="newPhotoReviewZone" alt="..." data-edit-photo-preview-target="imagePreview"/>
                            </div>

                            <% if @album.images[0].representable? %>
                                <%= image_tag @album.images[0], class: "newPhotoReviewZone", data: {edit_photo_preview_target: "initImage"} %>
                            <% end %>

                            <%= f.file_field :image, data: {edit_photo_preview_target: "imageUploader", action: "edit-photo-preview#updatePreview"}, id: "selectedFile", class: "d-none" %>

                        </div>
                    </div>


                    <!-- Submit and delete buttons -->
                    <div class="col-12 actions">
                        <%= submit_tag "Save", class: "btn btn-primary btn-block bg-theme" %>
                        <%= link_to "Delete", "/albums/" + @album.id.to_s, method: "delete", class: "btn btn-danger btn-block" %>
                    </div>




                <% end %>
            </div>


        </div>
    </div>
</div>