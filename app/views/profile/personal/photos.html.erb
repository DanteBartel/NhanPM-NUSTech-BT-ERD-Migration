<div class="main-background container-fluid">
    <div class="row pb-2">

        <!-- Side bar -->
        <div class="sideBar col-xl-2 mt-xl-3 d-xl-block position-fixed collapse bg-theme01" id="collapSideBar">
            <div class="d-flex flex-column align-items-center">
                <div class="py-2">
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="feed.html">Feeds</a>
                    <a class="feed-sidebar-item active-page nav-link p-1" href="#">My photos</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="my_album.html">My albums</a>                            
                </div>                        
            </div>                    
        </div>


        <!-- Inside the feed -->
        <div class="col-xl-8 mx-auto mt-3 bg-light row row-cols-1 justify-content-center">
            <!-- navigator between photos, albums, followings and followers -->
            <div class="py-2 d-flex justify-content-start">
                <a type="button" class="btn btn-success border" href="/profile/photos">Photos</a>
                <a type="button" class="btn btn-light border" href="/profile/albums">Albums</a>
                <a type="button" class="btn btn-light border" href="new_photo.html">Followings</a>
                <a type="button" class="btn btn-light border" href="new_photo.html">Followers</a>
                <a type="button" class="btn btn-light border" href="/users/edit">Edit Profile</a>
            </div>
            <!-- Buttons -->
            <div class="py-2 d-flex justify-content-end">
                <a type="button" class="btn btn-primary border bg-success" href=<%= "/users/" + current_user.id.to_s + "/photos/new" %>>Add New Photo</a>
            </div>            
            <!-- Horrizone line -->
            <hr/>
            <!-- List of My Photo items -->
            <div class="container-fluid">
                <div class="row g-3">
                    <% @photos.each do |pho| %>
                        <div class="col-auto">
                            <div class="myPhotoItem position-relative">
                                <!-- Image -->
                                <% if pho.image.representable? %>
                                    <%= image_tag pho.image, class: "myPhotoItemImg", data: {bs_toggle: "modal", bs_target: "#feedModal-"+pho.id.to_s} %>
                                <% end %>

                                <!-- Header -->
                                <div class="myPhotoItemHeader position-absolute top-0 d-flex align-items-center">
                                    <div class="text-white px-2">
                                        <%= pho.title %>
                                    </div>
                                    <a class="ms-auto me-1" href="/users/1/photos/1/edit">
                                        <img class="myPhotoItemEditIcon" src="/icon/edit-button-white.svg" alt="...">
                                    </a>                                
                                </div>

                                <!-- Lock icon -->
                                <% if not pho.is_public %>
                                    <div class="position-absolute p-2 bottom-0 end-0">
                                        <div class="d-flex p-1 bg-light rounded-circle">
                                            <img class="myPhotoItemLockIcon" src="/icon/lock.svg" alt="...">
                                        </div>
                                    </div>
                                <% end %>                                
                            </div>
                        </div>
                    <% end %>                    
                </div>
            </div>

            
            <!-- Pagination -->
            <div>
                <ul class="pagination justify-content-center mb-0 py-2">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>


        </div>
    </div>
</div>


<!-- Feed item modal -->
<% @photos.each do |pho| %>
    <div class="modal modal-center fade" id=<%= "feedModal-"+pho.id.to_s %> tabindex="-1" aria-labelledby="feedModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="feedModalLabel">
                        <%= pho.title %>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid text-center">
                        <% if pho.image.representable? %>
                            <%= image_tag pho.image, alt: "png", class: "feed-item-picture-modal" %>
                        <% end %>
                    </div>                        
                </div>
                <div class="modal-footer">
                    <%= pho.description %>
                </div>
            </div>
        </div>
    </div>
<% end %>