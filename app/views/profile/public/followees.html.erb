<div class="main-background container-fluid">
    <div class="row pb-2">

        <!-- Side bar -->
        <div class="sideBar col-xl-2 mt-xl-3 d-xl-block position-fixed collapse bg-theme01" id="collapSideBar">
            <div class="d-flex flex-column align-items-center">
                <div class="py-2">
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="/feeds/feeds_photos">Feeds</a>
                    <a class="feed-sidebar-item deactive-page nav-link p-1" href="/feeds/discover_photos">Discover</a>
                </div>                        
            </div>                    
        </div>


        <!-- Inside the feed -->
        <div class="col-xl-8 mx-auto mt-3 bg-light row row-cols-1 justify-content-center">

            <!-- Personal info -->
            <div class="container-fluid">
                <div class="row pt-2">
                    <div class="col-auto">
                        <% if @user.avatar.representable? %>
                            <%= image_tag @user.avatar, class: "myPhotoItemImg" %>
                        <% end %>
                    </div>
                    <div class="col-auto">
                        <div>
                            <%= render partial: "partials/buttons/follow", locals: {followers: @followers, user_id: @user.id} %>
                        </div>
                        <div>
                            <p class="fs-2 fw-bold">
                                <%= @user.fname.to_s + " " + @user.lname.to_s %>
                            </p>
                        </div>
                        <div>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/photos" %>>
                                <%= @user.photos_count.to_s + " Photos" %>
                            </a>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/albums" %>>
                                <%= @user.albums_count.to_s + " Albums" %>
                            </a>
                            <a type="button" class="btn btn-success border" href=<%= "/profile/" + @user.id.to_s + "/followees" %>>
                                <%= @user.followees_count.to_s + " Followings" %>
                            </a>
                            <a type="button" class="btn btn-light border" href=<%= "/profile/" + @user.id.to_s + "/followers" %>>
                                <%= @user.followers_count.to_s + " Followers" %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Horrizone line -->
            <div></div>
            <br>
            <hr>

            <!-- List of followings -->
            <div class="container-fluid">
                <div class="row g-3">
                    <% @follows_as_follower.each do |fol| %>
                        <% foee = fol.followee %>
                        <div class="col-auto">
                            <div class="bg-theme01">
                                <div>
                                    <% if foee.avatar.representable? %>
                                        <%= image_tag foee.avatar, class: "myPhotoItemImg" %>
                                    <% end %>
                                </div>

                                <div>
                                    <p>
                                        <%= foee.fname.to_s + " " + foee.lname.to_s %>
                                    </p>
                                </div>

                                <div>
                                    <a href="#">
                                        <%= (foee.photos_count.nil? ? 0 : foee.photos_count).to_s + " Photos" %>
                                    </a>
                                    <a href="#">
                                        <%= (foee.albums_count.nil? ? 0 : foee.albums_count).to_s + " Albums" %>
                                    </a>
                                </div>

                                <div>
                                    <%= render partial: "partials/buttons/follow", locals: {followers: foee.followers, user_id: foee.id} %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            
            <!-- Pagination -->
            <div>
                <ul class="pagination justify-content-center mb-0 py-2">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </div>

            <div>
                <%= paginate @follows_as_follower %>
            </div>

            <br>
            


        </div>
    </div>
</div>


